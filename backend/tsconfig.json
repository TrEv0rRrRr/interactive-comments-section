{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  }
}
